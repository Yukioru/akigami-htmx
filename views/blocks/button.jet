{{block button(title, href, type = "button", size = "md", onClick, class)}}
<button
  type="{{type}}"
  {{if href}}href="{{href}}"{{end}}
  {{if onClick}}onclick="{{onClick}}"{{end}}
  class="py-2 px-4 rounded-md bg-black text-white font-medium{{if class}} {{class}}{{end}}"
>{{title}}</button>
{{end}}
