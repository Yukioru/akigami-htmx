{{import "../blocks/button"}}
{{import "../blocks/input"}}

<form hx-post="/components/auth" hx-target="closest div">
  {{yield input(
    id = "email",
    type = "email",
    class = "w-full",
    title = locales.auth.email.title,
    placeholder = locales.auth.email.placeholder,
    required = "true"
  )}}
  {{yield button(
    type = "submit",
    class ="mt-6 w-full",
    title = locales.auth.submit,
  )}}
</form>